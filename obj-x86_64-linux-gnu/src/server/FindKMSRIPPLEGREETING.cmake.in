if (NOT "@_PARAM_INTERFACE_LIB_EXTRA_HEADERS@" STREQUAL "")
  if (TARGET kmsripplegreetinginterface)
    set (KMSRIPPLEGREETING_INTERFACE_EXTRA_INCLUDE_DIR "${KMSRIPPLEGREETING_SOURCE_DIR_PREFIX}/@_PARAM_INTERFACE_LIB_EXTRA_HEADERS_PREFIX@")
  else ()
    find_path(KMSRIPPLEGREETING_INTERFACE_EXTRA_INCLUDE_DIR
